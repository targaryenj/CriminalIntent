<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/list_item_crime_solved_checkbox"
        android:layout_alignParentRight="true"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/list_item_crime_title_textview"
        android:layout_toLeftOf="@id/list_item_crime_solved_checkbox"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Crime Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/list_item_crime_date_textview"
        android:layout_toLeftOf="@id/list_item_crime_solved_checkbox"
        android:layout_below="@id/list_item_crime_title_textview"
        android:padding="4dp"
        tools:text="Crime Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
